{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "P1 meter full reading",
  "type": "object",
  "required": ["timestamp", "unique_id"],
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "unique_id": { "type": "string" },
    "electricity": {
      "type": "object",
      "properties": {
        "delivered": { "type": "number" },
        "returned": { "type": "number" }
      }
    },
    "gas": { "type": "object", "properties": { "m3": { "type": "number" } } },
    "externals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" }
        }
      }
    }
  }
}
